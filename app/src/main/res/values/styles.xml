<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 对话框风格的Activity -->
    <style name="DialogTheme" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/recommend_window_background</item>
        <item name="colorAccent">@color/recommend_window_accent_color</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- 账户界面的设置项TextView风格 -->
    <style name="AccountTextViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/account_text_size</item>
        <item name="android:textColor">@color/account_text</item>
        <item name="android:paddingLeft">@dimen/account_text_padding_left</item>
        <item name="android:paddingTop">@dimen/account_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/account_text_padding_bottom</item>
    </style>

    <!-- 账户界面的标题项TextView风格 -->
    <style name="AccountTitleTextViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/account_title_size</item>
        <item name="android:textColor">@color/account_title_text</item>
        <item name="android:layout_marginLeft">@dimen/account_title_margin_left</item>
        <item name="android:layout_marginTop">@dimen/account_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/account_title_margin_bottom</item>
    </style>

    <!-- 用户信息界面的TextView风格 -->
    <style name="UserTextViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/user_text_size</item>
        <item name="android:textColor">@color/user_text</item>
        <item name="android:paddingLeft">@dimen/user_text_padding_left</item>
        <item name="android:paddingTop">@dimen/user_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/user_text_padding_bottom</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- 前景水波纹风格 -->
    <style name="ForegroundRippleStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- 背景水波纹风格 -->
    <style name="BackgroundRippleStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- 统计界面流量排行+通话时长统计的Layout风格 -->
    <style name="RankLayoutStyle" parent="ForegroundRippleStyle">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 统计界面流量排行+通话时长统计的TextView风格 -->
    <style name="RankTextViewStyle">
        <item name="android:drawableRight">@drawable/ic_right</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#414141</item>
    </style>

    <!-- 通话统计界面的Layout风格 -->
    <style name="CallRankLayoutStyle">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- 通话统计界面的标题TextView风格 -->
    <style name="CallRankTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#414141</item>
    </style>

    <!-- 通话统计界面的内容TextView风格 -->
    <style name="CallRankContentStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- 关于界面的信息区域风格 -->
    <style name="AboutInfoLayoutStyle" parent="ForegroundRippleStyle">
        <item name="android:paddingLeft">@dimen/about_layout_padding_left</item>
        <item name="android:paddingRight">@dimen/about_layout_padding_right</item>
        <item name="android:paddingTop">@dimen/about_layout_padding_top</item>
        <item name="android:paddingBottom">@dimen/about_layout_padding_bottom</item>
    </style>

    <!-- 关于界面的标题TextView风格 -->
    <style name="AboutTitleTextViewStyle">
        <item name="android:textSize">@dimen/about_title_text_size</item>
        <item name="android:textColor">@color/about_title_text</item>
    </style>

    <!-- 关于界面的内容TextView风格 -->
    <style name="AboutContentTextViewStyle">
        <item name="android:textSize">@dimen/about_content_text_size</item>
        <item name="android:gravity">right</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

</resources>
