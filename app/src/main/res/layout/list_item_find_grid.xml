<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    style="@style/ForegroundRippleStyle"
    app:cardElevation="2dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/text_view_package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                tools:text="大王卡"/>
            <TextView
                android:id="@+id/text_view_package_month_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/find_month_rent_text"
                android:visibility="visible"
                tools:text="月租8元"/>
        </LinearLayout>-->

        <LinearLayout
            android:id="@+id/layout_top_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:orientation="vertical"
            android:gravity="center"
            tools:background="@color/find_card_background_seven">
            <TextView
                android:id="@+id/text_view_package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#fff"
                tools:text="大王卡"/>
            <TextView
                android:id="@+id/text_view_package_month_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#fff"
                android:visibility="visible"
                tools:text="月租8元"/>
        </LinearLayout>

        <!-- 下方区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_package_partner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/report_tips_text"
                android:gravity="center"
                tools:text="腾讯"/>
            <TextView
                android:id="@+id/text_view_package_star"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/find_package_star_text"
                tools:text="8.6"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>