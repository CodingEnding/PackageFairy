<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ForegroundRippleStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <!--<ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_device"/>-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_view_device_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/device_type_text"
                android:textSize="16sp"
                tools:text="WAS-AL00"/>
            <TextView
                android:id="@+id/text_view_system_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                tools:text="Android 6.0"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_device_now"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="本机"/>
    </LinearLayout>

    <!-- 底部分割线 -->
    <include layout="@layout/divider_line"/>

</LinearLayout>